---
@version: [2, current]
@description: Check the existence of a folder.
@lot:
  - string $path, $fail = false
  - array $path, $fail = false
@static: 1
@example: |
  if (Folder::exist('.\path\to\folder')) {
      echo 'Folder `.\path\to\folder` does exist.';
  }

  // Return the given path if folder is exists, return `false` if not
  if ($folder = Folder::exist('.\path\to\folder')) {
      define('THE_FOLDER', $folder);
  } else {
      define('THE_FOLDER', '.\path\to\folder.alt');
  }

  // Shortcut for above example
  define('THE_FOLDER', Folder::exist('.\path\to\folder', '.\path\to\folder.alt'));
