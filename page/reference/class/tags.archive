---
@version: [current]
@description: Tag collection.
@parent: pages
@example: |
  $tags = new Tags([
      '.\lot\tag\foo.page',
      '.\lot\tag\bar.page',
      '.\lot\tag\baz.page'
  ]);

  foreach ($tags->sort([1, 'slug']) as $tag) {
      echo '<h2>' . $tag->title . '</h2>';
      echo '<div>' . $tag->description . '</div>';
  }

@use:
  '.\lot\x\tag': 1
...