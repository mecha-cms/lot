---
@version: [2, current]
@description: Get raw [_superglobals_](http://php.net/manual/en/language.variables.superglobals.php) variable values.
@lot: string $kin, array $lot = []
@static: 1
@example: |
  $cookie = Get::cookie(); // `$_COOKIE`
  $env = Get::env(); // `$_ENV`
  $files = Get::files(); // `$_FILES`
  $get = Get::get(); // `$_GET`
  $post = Get::post(); // `$_POST`
  $request = Get::request(); // `$_REQUEST`
  $server = Get::server(); // `$_SERVER`
  $session = Get::session(); // `$_SESSION`

  // `?foo[bar]=1&foo[baz]=qux`
  $A = Get::get();
  $B = Get::get('foo');
  $C = Get::get('foo.bar');
  $D = Get::get([
      'foo' => null,
      'foo.bar' => null,
      'qux' => null
  ]);
@result: |
  $A = [
      'foo' => [
          'bar' => '1',
          'baz' => 'qux'
      ]
  ];

  $B = [
      'bar' => '1',
      'baz' => 'qux'
  ];

  $C = '1';

  $D = [
      'foo' => [
          'bar' => '1',
          'baz' => 'qux'
      ],
      'foo.bar' => '1',
      'qux' => null
  ];
...