---
@version: [2, current]
@description: Create a HTML `<select>` element.
@lot: string $name = null, array $options = [], $select = null, array $attr = [], $dent = 0
@static: 1
@example: |
  echo Form::select('o', [
      0 => 'red',
      1 => 'green',
      2 => 'blue'
  ], 1);

  echo Form::select('o', [
      'Color' => [
          '0.0' => 'red',
          '0.1' => 'green',
          '0.2' => 'blue'
      ],
      'Size' => [
          '1.0' => 'small',
          '1.1' => 'medium',
          '1.2' => 'large'
      ]
  ], '1.1');
@result: |
  [[e]]
  echo Form::select('o', [
      0 => 'red',
      1 => 'green',
      2 => 'blue'
  ], 1) . "\n\n" . Form::select('o', [
      'Color' => [
          '0.0' => 'red',
          '0.1' => 'green',
          '0.2' => 'blue'
      ],
      'Size' => [
          '1.0' => 'small',
          '1.1' => 'medium',
          '1.2' => 'large'
      ]
  ], '1.1');
  [[/e]]
@result-language: 'html'
