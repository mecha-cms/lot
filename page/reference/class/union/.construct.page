### Create Custom Markup

~~~ .php.xmp
$union->union = [
    1 => [
        0 => ['<', '>', '/', '[\w:.-]+'],
        1 => ['=', '"', '"', ' ', '[\w:.-]+'],
        2 => ['<!--', '-->']
    ]
];
~~~

~~~ .php
Anemon::extend($union->union, [
    1 => [
        0 => ['{{', '}}', 'end'],
        1 => ['=', '"', '"', ' '],
        2 => ['{{!', '!}}']
    ]
]);

$test_1 = $union->unite('foo', 'content', ['bar' => 'baz']);
$test_2 = $union->unite('bar', false, ['qux' => '1']);
$test_3 = $union->__('test comment', 0, ' ');
$test_4 = $union->apart('{{foo bar}}');
$test_5 = $union->apart('<foo bar>');
~~~

