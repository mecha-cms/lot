@version: [2, current]
@description: Create a new cache file.
@lot: string $id, callable $fn, array $lot = []
@return: array
@static: 1
@example: |
  $A = Cache::set('foo', function() {
      return date('Y-m-d H:i:s');
  });

  $B = Cache::set('.\lot\path\to\file.php', function($file) {
      ob_start();
      require $file;
      return ob_get_clean();
  });
