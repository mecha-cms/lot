---
@version: [2, current]
@description: Get array value recursively.
@lot: array &$array, string $key, string $separator = '.'
@static: 1
@example: |
  $array = [
      'foo' => 1,
      'bar' => [
          'baz' => 2,
          'qux' => 3
      ]
  ];

  $A = Anemon::get($array, 'bar.baz') ?? '#';
  $B = Anemon::get($array, 'bar.wut') ?? '#';
@result: |
  $A = 2;
  $B = '#';
...