---
@version: [2, current]
@description: Get array value recursively.
@lot:
- string $key = null, string $join = '.'
@example: |
  $array = new Anemon([
      'foo' => 1,
      'bar' => [
          'baz' => 2,
          'qux' => 3
      ]
  ]);

  $A = $array->get('bar.baz') ?? '#';
  $B = $array->get('bar.wut') ?? '#';
@result: |
  $A = 2;
  $B = '#';
...