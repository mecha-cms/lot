---
@version: [2, current]
@description: Set or replace array values recursively.
@lot:
- string $key, $value = null, string $join = '.'
@example: |
  $array = new Anemon([
      'foo' => 1,
      'bar' => [
          'baz' => 2,
          'qux' => 3
      ]
  ]);

  $array->set('bar.baz', '#');
  $array->set('bar.wut', '#');
@result: |
  $array = Anemon::__set_state([
      'foo' => 1,
      'bar' => [
          'baz' => '#',
          'qux' => 3,
          'wut' => '#'
      ]
  ]);
...