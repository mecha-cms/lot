---
@version: [2, current]
@description: Convert YAML string into array.
@lot: $in, string $dent = '  ', $docs = false, $e = true
@static: 1
@example: |
  $A = From::YAML('foo: bar');
  $B = From::YAML(
  <<<YAML
  foo: bar
  baz: qux
  YAML
  );
  $C = From::YAML(
  <<<YAML
  ---
  foo: bar
  baz: qux
  ---
  foo: bar
  baz: qux
  ...
  foo bar baz
  YAML
  , '  ', true);
@result: |
  $A = ['foo' => 'bar'];
  $B = [
      'foo' => 'bar',
      'baz' => 'qux'
  ];
  $C = [
      0 => [
          'foo' => 'bar',
          'baz' => 'qux'
      ],
      1 => [
          'foo' => 'bar',
          'baz' => 'qux'
      ],
      "\t" => 'foo bar baz'
  ];
@use:
  '.\lot\x\y-a-m-l': 1
...

[connect:/article/y-a-m-l]