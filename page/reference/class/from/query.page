---
@version: [current]
@description: Convert URL query string into PHP array.
@lot:
- string $in
@static: 1
@example: |
  $A = From::query('?a=1&b&c=true&e=false&f=null&g=null&h=&i%5Bj%5D%5Bk%5D%5B0%5D=1&i%5Bj%5D%5Bk%5D%5B1%5D=2&i%5Bj%5D%5Bl%5D=mno');
@result: |
  $A = [
      'a' => 1,
      'b' => true,
      'c' => true,
      'e' => false,
      'f' => null,
      'g' => null,
      'h' => '',
      'i' => [
          'j' => [
              'k' => [1, 2],
              'l' => 'mno'
          ],
      ],
  ];
