---
@version: [2, current]
@description: Create a HTML `<a>` element.
@lot: string $text = "", string $href = null, $target = null, array $attr = [], $dent = 0
@static: 1
@example: |
  echo HTML::a('test internal link', '%{url}%');
  echo HTML::a('test external link', '%{url}%', true);
  echo HTML::a('test link', '%{url}%', 'frame-1');
@result: |
  [[e]]
  echo HTML::a('test internal link', $url) . "\n" . HTML::a('test external link', $url, true) . "\n" . HTML::a('test link', $url, 'frame-1');
  [[/e]]
@result-language: 'html'
