@description: Convert file size.
@lot:
- string $unit = null, int $r = 2
@example: |
  $file = new File('.\path\to\file.txt');

  $A = $file->size; // Automatic (as short as possible)
  $B = $file->size('KB'); // Force to `KB`
@result: |
  $A = '388 B';
  $B = '0.38 KB';
