---
@version: [1, 2, current]
@description: Check the existence of a file or folder.
@lot:
  - string $path, $fail = false
  - array $path, $fail = false
@static: 1
@example: |
  // Generic
  if (File::exist('.\path\to\file.txt')) { â€¦ }

  // Return the given path if file or folder exists, return `false` if not
  if ($file = File::exist('.\path\to\header.php')) {
      require $file;
  } else {
      require '.\path\to\header.alt.php';
  }

  // Shortcut for above example
  require File::exist('.\path\to\header.php', '.\path\to\header.alt.php');

  // Loop through list of file path until it finds a file that exists
  if ($test = File::exist([
      '.\path\to\page-post-2016.php',
      '.\path\to\page-post.php',
      '.\path\to\page.php'
  ], false)) {
      echo 'Current file: ' . $test;
  } else {
      echo 'Current file: false';
  }
