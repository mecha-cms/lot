@version: [2, current]
@description: Check the existence of a file/folder.
@lot: $path, $fail = false
@static: 1
@example: |
  // Generic
  if (File::exist('.\path\to\file.txt')) { â€¦ }

  // Return the given path if file/folder exists, return `false` if not
  if ($file = File::exist('.\path\to\header.php')) {
      require $file;
  } else {
      require '.\path\to\header.alt.php';
  }

  // Shortcut for above example
  require File::exist('.\path\to\header.php', '.\path\to\header.alt.php');

  // Loop through list of file path until it finds a file that exists
  if ($test = File::exist([
      'page-post-2016.php',
      'page-post.php',
      'page.php'
  ], false)) {
      echo 'File: ' . $test;
  } else {
      echo 'File: false';
  }
