---
@version: [current]
@description: Convert current date to other date based on time zone input.
@lot: string $zone = 'UTC'
@example: |
  $date = new Date('[[e]]echo date('Y-m-d H:i:s');[[/e]]');

  $A = $date->format('h:i:s A');
  $B = $date->to('UTC')->format('h:i:s A');
  $C = $B->parent->format('h:i:s A');
@result: |
  $A = '[[e]]echo (new Date(date('Y-m-d H:i:s')))->format('h:i:s A');[[/e]]';
  $B = '[[e]]echo (new Date(date('Y-m-d H:i:s')))->to('UTC')->format('h:i:s A');[[/e]]';
  $C = '[[e]]echo (new Date(date('Y-m-d H:i:s')))->to('UTC')->parent->format('h:i:s A');[[/e]]';
