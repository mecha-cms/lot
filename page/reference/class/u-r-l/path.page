---
@version: [current]
@description: Return the URL path if any, otherwise return `null`.
@lot:
- void
- string $join = '/'
- string $join = '/', array $p = []
@example: |
  $A = $url->path;
  $B = $url->path();
  $C = $url->path('\\');
  $D = $url->path('\\', [1 => '#']);
@result: |
  $A = '[[e]]echo (new URL('foo/bar/baz'))->path;[[/e]]';
  $B = '[[e]]echo (new URL('foo/bar/baz'))->path();[[/e]]';
  $C = '[[e]]echo (new URL('foo/bar/baz'))->path('\\');[[/e]]';
  $D = '[[e]]echo (new URL('foo/bar/baz'))->path('\\', [1 => '#']);[[/e]]';
