---
@version: [2, current]
@description: Convert file path to its base name.
@lot:
- string $path, int $step = 1, string $join = DS
@static: 1
@example: |
  $A = Path::B('foo\bar\baz.qux');
  $B = Path::B('foo\bar\baz.qux', 2);
  $C = Path::B('foo-bar-baz.qux', 1, '-');
  $D = Path::B('foo.bar.baz.qux', 1, '.');
@result: |
  $A = 'baz.qux';
  $B = 'bar\baz.qux';
  $C = 'baz.qux';
  $D = 'qux';
...