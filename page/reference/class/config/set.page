---
@version: [2, current]
@description: Set global state item.
@lot:
- string $key, $value
- array $values
@static: 1
@example: |
  // Set a `test` item with value `#`
  Config::set('test', '#');
  // Set a `test` item with value `['foo' => '#']`
  Config::set('test.foo', '#');
  // Set multiple items
  Config::set([
      'foo' => 'bar',
      'baz' => 'qux'
  ]);
...