---
@version: [2, current]
@description: Get global state item.
@lot:
  - void
  - string $key = null, $fail = false, $array = false
  - array $keys = [], $array = false
@static: 1
@example: |
  $A = Config::get('page');
  $B = Config::get('page', false, true);
  $C = Config::get('page.type');
  $D = Config::get('page')->type;
  $E = Config::get('page', false, true)['type'];

  $F = Config::get([
      'title' => false,
      'page.title' => false
  ]);
  $G = Config::get([
      'title' => false,
      'page.title' => false
  ], true);
@result: |
  $A = stdClass::__set_state([
      'title' => 'Default Page Title',
      'description' => 'Default page description.',
      'type' => 'HTML'
  ]);
  $B = [
      'title' => 'Default Page Title',
      'description' => 'Default page description.',
      'type' => 'HTML'
  ];
  $C = 'HTML';
  $D = 'HTML';
  $E = 'HTML';

  $F = stdClass::__set_state([
      'title' => 'Site Title',
      'page.title' => 'Default Page Title'
  ]);
  $G = [
      'title' => 'Site Title',
      'page.title' => 'Default Page Title'
  ];
...