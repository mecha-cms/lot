@version: [2, current]
@description: Detect current request type.
@lot: string $id = null, string $key = null
@static: 1
@example: |
  if (HTTP::is('post')) {
      // Is a `POST` request!
  }

  if (HTTP::is('post', 'content')) {
      // Is has `content` key in `$_POST` array either it contains a value or not
      // This is equal to `if (array_key_exists('content', $_POST ?? [])) {}`
  }

  if (HTTP::post('content')) {
      // Is has `content` key in `$_POST` array and it contains a value
      // This is equal to `if (isset($_POST['content'])) {}`
  }
